<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.payouth.hackathon.vote.ui.tab_bar.fragment.TabBar2ViewModel" />


    </data>

    <LinearLayout
        android:id="@+id/detail_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <include
            android:id="@+id/include"
            layout="@layout/layout_toolbar"
            binding:toolbarViewModel="@{viewModel.toolbarViewModel}" />

        <ImageView
            android:id="@+id/vote_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@mipmap/a1" />

        <TextView
            android:id="@+id/vote_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Candidate Name"
            android:textColor="@color/text_grey"
            android:textStyle="bold"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/vote_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Sun, Xu"
            android:textColor="@color/textSecondary"
            android:textSize="22dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccentGrid"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/vote_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginTop="12dp"
            android:text="Personal Profile"
            android:textColor="@color/text_grey"
            android:textStyle="bold"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/vote_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="He has great organizational skills, and proficients in various back-end technologies"
            android:textColor="@color/textSecondary"
            android:textSize="20dp" />

        <Button
            android:layout_marginTop="150sp"
            android:id="@+id/vote_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_button"
            android:text="Vote"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</layout>